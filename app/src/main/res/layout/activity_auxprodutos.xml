<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    tools:context="com.example.pedrito.delivery_pizza.Delivery.Auxprodutos">

    <TextView
        android:id="@+id/textAdicionais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Deseja recheio nas bordas?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="94dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editQtd"
        android:layout_alignStart="@+id/editQtd" />

    <CheckBox
        android:id="@+id/BoxNenhum"
        android:layout_width="97dp"
        android:layout_height="33dp"
        android:text="Nenhum  R$0,00"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="131dp"
        android:layout_below="@+id/textAdicionais"
        android:layout_alignStart="@+id/textAdicionais"
        android:layout_marginTop="22dp" />

    <CheckBox
        android:id="@+id/checkCatupiry"
        android:layout_width="99dp"
        android:layout_height="34dp"
        android:text="Catupiry     + R$2,00"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="131dp"
        android:layout_alignBaseline="@+id/BoxNenhum"
        android:layout_alignBottom="@+id/BoxNenhum"
        android:layout_toStartOf="@+id/btnProsseguir2" />

    <CheckBox
        android:id="@+id/checkCheedar"
        android:layout_width="97dp"
        android:layout_height="32dp"
        android:text="Cheedar -  + R$3,00"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="176dp"
        android:layout_below="@+id/BoxNenhum"
        android:layout_alignStart="@+id/BoxNenhum"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnProsseguir2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:fontFamily="monospace"
        android:text="Prosseguir"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="443dp"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/PizzaNome"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textAdicionais"
        android:layout_marginTop="21dp"
        android:fontFamily="sans-serif"
        android:text="pizza"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_alignEnd="@+id/ordemBox" />

    <TextView
        android:id="@+id/pizValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toStartOf="@+id/textView13" />

    <Button
        android:id="@+id/ordemBox"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@drawable/shape"
        android:fontFamily="monospace"
        android:text="Adicionar"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/checkCheedar"
        android:layout_toEndOf="@+id/CheckGoiabada" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/pizValor"
        android:layout_toStartOf="@+id/pizValor" />

    <TextView
        android:id="@+id/textBorda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:text="0"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textBorda"
        android:lineSpacingExtra="8sp"
        android:text="------------------------"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/TextTotal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/reais"
        android:layout_alignBottom="@+id/reais"
        android:layout_toEndOf="@+id/reais" />

    <TextView
        android:id="@+id/reais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <CheckBox
        android:id="@+id/CheckGoiabada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/checkCatupiry"
        android:layout_alignStart="@+id/checkCatupiry"
        android:layout_alignTop="@+id/checkCheedar"
        android:text="Goiabada   + R$3,00" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toStartOf="@+id/pizValor" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=",00"
        android:textColor="@color/colorAccent"
        android:layout_alignBaseline="@+id/textBorda"
        android:layout_alignBottom="@+id/textBorda"
        android:layout_toEndOf="@+id/textBorda" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza : "
        android:textColor="@android:color/background_dark"
        android:layout_alignBottom="@+id/ordemBox"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borda : "
        android:textColor="@android:color/background_dark"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SubTotal : "
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=",00"
        android:textColor="@color/colorAccent"
        android:layout_alignBaseline="@+id/pizValor"
        android:layout_alignBottom="@+id/pizValor"
        android:layout_toEndOf="@+id/reais" />

    <TextView
        android:id="@+id/idQuantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Quantas pizzas?"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_below="@+id/PizzaNome"
        android:layout_alignStart="@+id/textView10" />

    <EditText
        android:id="@+id/editQtd"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/idQuantidade"
        android:layout_below="@+id/idQuantidade"
        android:background="@drawable/shape3"
        android:ems="10"
        android:hint="Ex: 2"
        android:inputType="number"
        android:padding="10px"
        android:paddingBottom="10px"
        android:paddingEnd="10px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingTop="10px"
        android:text="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/obsBf"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:fontFamily="cursive"
        android:text="Observação:"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/obsBf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnProsseguir2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/btnProsseguir2"
        android:background="@drawable/shape3"
        android:ems="10"
        android:hint="Ex: Não quero cebola. "
        android:inputType="text"
        android:paddingBottom="5px"
        android:paddingEnd="5px"
        android:paddingLeft="5px"
        android:paddingRight="5px"
        android:paddingStart="5px"
        android:paddingTop="5px"
        android:textSize="12sp" />

</RelativeLayout>
