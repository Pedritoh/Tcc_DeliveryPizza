<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    tools:context="com.example.pedrito.delivery_pizza.Delivery.TelaLogin">

    <ImageView
        android:id="@+id/Moto"
        android:layout_width="300dp"
        android:layout_height="325dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/vintage"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:fontFamily="cursive"
        android:text="Email:"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:layout_below="@+id/Moto"
        android:layout_alignStart="@+id/Moto" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignEnd="@+id/Moto"
        android:layout_toEndOf="@+id/textView15"
        android:background="@drawable/shape3"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Exemplo@email.com"
        android:inputType="textEmailAddress"
        android:padding="10px"
        android:paddingEnd="10px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingStart="10px"
        android:paddingTop="12px"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="14dp"
        android:fontFamily="cursive"
        android:text="Senha:"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/editSenha"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/textView15"
        android:background="@drawable/shape3"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="10px"
        android:paddingEnd="10px"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:paddingStart="10px"
        android:paddingTop="10px"
        android:textColor="@android:color/background_dark"
        android:layout_alignEnd="@+id/editEmail"
        android:layout_toEndOf="@+id/textView14" />

    <Button
        android:id="@+id/btn_Logar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:text="Entrar"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/editSenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="NÃ£o possui cadastro?"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn_Logar"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/ir_Cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique Aqui!"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />

</RelativeLayout>
